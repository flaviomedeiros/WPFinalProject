<UserControl x:Class="WP_Final_Project.View.ItemIngredienteReceita"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Height="70" >

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>

        <CheckBox Grid.Column="0" x:Name="CheckPossuo" Checked="CheckPossuo_Checked"/>
        <TextBlock Grid.Column="1" x:Name="NomeIngrediente" Tap="LayoutRoot_Tap"/>
        <TextBlock Grid.Column="2" x:Name="SupermercadoMaisProximo" Visibility="Collapsed" Tap="LayoutRoot_Tap"/>
    </Grid>
</UserControl>