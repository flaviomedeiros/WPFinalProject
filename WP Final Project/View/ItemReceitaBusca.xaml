<UserControl x:Class="WP_Final_Project.View.ItemReceitaBusca"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Height="70" >

    <Grid x:Name="LayoutRoot" Tap="LayoutRoot_Tap">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" x:Name="Compatibilidade" Text="100%" Margin="10 0 0 0"/>
        <TextBlock Grid.Column="1" x:Name="NomeReceita" Text="Receita" Margin="20 0 0 0">
    </Grid>
</UserControl>